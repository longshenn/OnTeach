<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoryAC">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgse"
                android:layout_width="375dp"
                android:layout_height="367dp"
                android:src="@drawable/c22" />

            <TextView
                android:id="@+id/acse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="幽靈船的起源，最早是從1995年台中的衛爾康餐廳大火開始的，共造成64死11傷。為台灣有史以來單一建築物死亡人數最多的火災與踩踏事故，同時這次大火也是台灣歷來第二多人死亡的火災。"
                android:textColor="#333232"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/acse2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="釀災原因：起因於瓦斯外洩。餐廳旁邊原本是停車場及防火巷空地，但後來被改建成KTV，逃生無門。"
                android:textColor="#333232"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/acse3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="據說當時幽靈船就停在餐廳的上空，而台中的金沙百貨(後改名神鑑大樓)、新北三重的重新橋、台南的中國城等地方，也都有傳言出現幽靈船的蹤影。有人說他們在蒐集乘客（亡魂）。幽靈船被認為是靈界來接人，而且除非乘客滿100人（一說108人）否則不會啟程。"
                android:textColor="#333232"
                android:textSize="20sp" />

            <Button
                android:id="@+id/rese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="Back"
                app:backgroundTint="@color/black"
                app:rippleColor="@color/design_default_color_error" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>